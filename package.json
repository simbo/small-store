{
  "name": "small-store",
  "version": "0.1.0",
  "description": "A small, immutable, reactive and framework agnostic state store under 2KB powered by rxjs and immer with full typescript support. To be used with vanilla, react, preact, angular, vue or whatever you like.",
  "author": "Simon Lepel <simbo@simbo.de> (https://simbo.de)",
  "license": "MIT",
  "keywords": [
    "store",
    "state",
    "rxjs",
    "immer",
    "immutable",
    "react",
    "preact",
    "angular",
    "vue",
    "vanilla"
  ],
  "homepage": "https://github.com/simbo/small-store#readme",
  "repository": "github:simbo/small-store",
  "bugs": "https://github.com/simbo/small-store/issues",
  "source": "src/small-store.ts",
  "main": "dist/small-store.js",
  "umd:main": "dist/small-store.umd.js",
  "module": "dist/small-store.m.js",
  "esmodule": "dist/small-store.modern.js",
  "types": "dist/small-store.d.ts",
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "microbundle",
    "clean": "rm -rf ./dist",
    "clean:coverage": "rm -rf ./coverage",
    "coverage:open": "open ./coverage/lcov-report/index.html",
    "build:watch": "microbundle watch",
    "lint": "yarn run lint:prettier && yarn run lint:eslint",
    "lint:prettier": "prettier --check \"**/*.{ts,js,md,json,yml}\"",
    "lint:eslint": "eslint -c .eslintrc.js --ext .ts,.js .",
    "pretest": "yarn run clean:coverage",
    "prebuild": "yarn run clean",
    "prebuild:watch": "yarn run clean",
    "test": "jest",
    "test:watch": "yarn run test --watch"
  },
  "dependencies": {
    "immer": "^8.0.0",
    "rxjs": "^6.6.3"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.10",
    "@babel/preset-typescript": "^7.12.7",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.13",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/eslint-plugin-tslint": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "babel-jest": "^26.6.3",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^30.7.8",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "eslint-plugin-unicorn": "^23.0.0",
    "jest": "^26.6.3",
    "microbundle": "^0.12.4",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3"
  }
}
